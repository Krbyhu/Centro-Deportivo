                                    <th>Hora inicio</th>
                                    <th>Hora termino</th>
                                    <th>Acciones</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                <% if(sched){ %>
                                    <% for (var i=0; i < sched.length; i++){ %>
                                        <tr>
                                            <td>
                                                <%= sched[i].id_horario  %>
                                            </td>
                                            <td>
                                                <%= sched[i].hora_inicio  %>
                                            </td>
                                            <td>
                                                <%= sched[i].hora_termino  %>
                                            </td>
                                            <td align="Center">
                                                <a href="/admin/sched/update/<%= sched[i].id_horario  %>"" style="color: blue"><i class="fas fa-pencil-alt"></i></a>
                                                <a href="/admin/sched/delete/<%= sched[i].id_horario  %>" style="color: red"><i class="fas fa-trash-alt"></i></a>
                                            </td>
                                        </tr>
                                        <%} %>
                                            <%} %>
                            </tbody>
                        </table>
                    </div>
                </div>
