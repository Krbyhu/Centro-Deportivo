<% include ../partials/_header %>

    <body class="all">
        <div class="container register">
            <div class="row">
                <div class="col-md-3 register-left">
                    <img src="https://image.ibb.co/n7oTvU/logo_white.png" alt="" />
                    <h3>Bienvenido</h3>
                    <p>You are 30 seconds away from earning your own money!</p>
                    <a class="btn btn-outline-light mt-auto" href="/">Ingresar</a><br/>
                </div>
                <div class="col-md-9 register-right">
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <h3 class="register-heading">Registrarse</h3>
                            <form action="/register" method="POST">
                                <div class="row register-form">
                                    <div class="col-md-6">
                                        <div class="form-label-group">
                                            <input type="text" name="nombre" id="inputNombre" class="form-control" placeholder="Nombre_completo" required autofocus>
                                            <label for="inputNombre">Nombre Completo</label>
                                        </div>

                                        <div class="form-label-group">
                                            <input type="text" name="nombre_usuario" id="inputNombre_usuario" class="form-control" placeholder="Nombre Usuario" required>
                                            <label for="inputNombre_usuario">Nombre Usuario</label>
                                        </div>
                                        <div class="form-label-group">
                                            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Contraseña" required>
                                            <label for="inputPassword">Contraseña</label>
                                        </div>
                                        <div class="form-group input-group">
                                            <input type="text" class="form-control" value="+569" style="max-width: 65px;" readonly>
                                            <input type="number" name="telefono" class="form-control" placeholder="Telefono *" minlength="8" maxlength="8" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-label-group">
                                            <input type="email" name="correo" id="inputCorreo" class="form-control" placeholder="Correo" required>
                                            <label for="inputCorreo">Correo</label>
                                        </div>
                                        <div class="form-group input-group">
                                            <input type="number" name="rut" minlength="9" maxlength="9" class="form-control" placeholder="Rut" required/>
                                            <input type="text" name="dV" minlength="1" maxlength="1" class="form-control" style="max-width: 65px;" placeholder="DV" required/>
                                        </div>
                                        <div class="form-label-group">
                                            <input type="text" name="direccion" id="inputDireccion" class="form-control" placeholder="Direccion" required>
                                            <label for="inputDireccion">Direccion</label>
                                        </div>
                                        <button class="btnRegister">Registrarse</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% include ../partials/_footer %>